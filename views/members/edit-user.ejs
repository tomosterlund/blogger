<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
</head>
<body>
    <%- include('../includes/header.ejs') %>
    <main>
        <div class="registration-page__container">
            <form action="/edit-user/<%= user._id %>" method="post">
                <h2>Edit your details</h2>
                <div class="input-container">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="name" placeholder="Enter your name" value="<%= user.name %>">
                </div>
                <div class="input-container">
                    <label for="email">E-mail</label>
                    <input class="form-control" type="email" name="email" placeholder="Enter your email" value="<%= user.email %>">
                </div>
                <!-- <div class="input-container">
                    <label for="password">Change Password</label>
                    <input class="form-control" type="password" name="password" placeholder="Choose a password">
                </div>
                <div class="input-container">
                    <label for="pwconfirm">Confirm new password</label>
                    <input class="form-control" type="password" name="pwconfirm" placeholder="Enter your password again">
                </div> -->
                <div class="input-container">
                    <label for="imageUrl">Image URL</label>
                    <input class="form-control" type="text" name="imageUrl" placeholder="Enter an image-URL here" value="<%= user.imageUrl %>">
                </div>
                <div class="input-container">
                    <label for="name">Description</label>
                    <textarea name="description" id="description" placeholder="Describe yourself" value="">
                    <%= user.description %>
                    </textarea>
                </div>
                <input type="hidden" value="<%= csrfToken %>" name="_csrf">
                <button class="btnRegistration btn" type="submit">Save details</button>
            </form>
        </div>
    </main>
    <%- include('../includes/scripts.ejs') %>
</body>
</html>